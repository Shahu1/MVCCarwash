@{
    ViewData["Title"] = "Home Page";
}

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-image: url('/Images/car.jpg');
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size: cover;
    }

    .jumbotron {
        background-color: rgba(255, 255, 255, 0.7);
        padding: 60px 30px;
        margin-top: 100px;
        border-radius: 20px;
        box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.3);
    }

    .jumbotron h1 {
        font-size: 48px;
        color: #333;
    }

    .jumbotron p {
        font-size: 18px;
        color: #555;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #0056b3;
    }
</style>

<div class="jumbotron text-center">
    <h1 class="display-4">Welcome to Our Car Wash</h1>
    <p class="lead">We provide top-notch car wash services.</p>
    <hr class="my-4">
    <p>Learn more about our services and book your first car wash with us.</p>
    <a class="btn btn-primary btn-lg" href="/CarWashServices/Book" role="button">Book Now</a>
</div>