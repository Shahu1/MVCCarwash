@model IEnumerable<CarWashApp.Models.CarWashService>

<style>
    body {
        background-color: #f8f9fa;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .container {
        max-width: 800px;
        margin: auto;
        background-color: white;
        padding: 30px 40px;
        border-radius: 8px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        margin-top: 50px;
    }

    h2 {
        color: #333;
        text-align: center;
        margin-bottom: 30px;
        font-weight: lighter;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        padding: 15px;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #007bff;
        color: white;
    }

    a {
        color: #007bff;
        text-decoration: none;
        margin-right: 15px;
        border: 1px solid #007bff;
        padding: 5px 10px;
        border-radius: 5px;
        transition: all 0.3s ease;
    }

    a:hover {
        color: #fff;
        background-color: #007bff;
    }
</style>

<div class="container">
    <h2>Service List</h2>

    <table>
        <thead>
            <tr>
                <th>Service Name</th>
                <th>Price</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Basic Wash</td>
                <td>$10</td>
                <td>
                    <ul>
                        <li>Exterior wash</li>
                        <li>Hand dry</li>
                        <li>Wheel cleaning</li>
                        <li>Tire shine</li>
                        <li>Window cleaning (outside only)</li>
                    </ul>
                </td>
            </tr>
            <tr>
                <td>Deluxe Wash</td>
                <td>$20</td>
                <td>
                    <ul>
                        <li>Everything in Basic Wash</li>
                        <li>Interior vacuuming</li>
                        <li>Dashboard dusting and cleaning</li>
                        <li>Window cleaning (inside and outside)</li>
                        <li>Air freshener</li>
                    </ul>
                </td>
            </tr>
            <tr>
                <td>Premium Wash</td>
                <td>$35</td>
                <td>
                    <ul>
                        <li>Everything in Deluxe Wash</li>
                        <li>Seat cleaning and conditioning (leather or fabric)</li>
                        <li>Carpet shampooing</li>
                        <li>Detailed hand waxing</li>
                        <li>Undercarriage wash</li>
                        <li>Rain repellent treatment for windshield</li>
                    </ul>
                </td>
            </tr>
        </tbody>
    </table>
</div>
